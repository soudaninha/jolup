<h1>목록 페이지</h1>
<div class="table-responsive">
    <table class="table table-fit">
        <thead>
            <tr>
                <th>제목</th>
                <th>글쓴이</th>
                <th>공고기한</th>
            </tr>
        </thead>
        <tbody>
                <%@posts.each do |post|%>
                    <tr>
                        <td><%=link_to("#{post.title} (#{post.comments.count})", post_path(post.id))%></td>
                        <td><%=post.user.email%></td>
                        <td><%=post.recruitdate%></td>
                    </tr>
                <%end%>
        </tbody>
    </table>
</div>

